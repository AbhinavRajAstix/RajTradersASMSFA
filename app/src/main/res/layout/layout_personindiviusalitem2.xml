<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:weightSum="8"
    android:descendantFocusability="beforeDescendants"
    android:paddingLeft="4dp"
    android:paddingTop="0dp"
    android:paddingBottom="@dimen/dimen_0dp"
    android:paddingRight="4dp">


        <ImageButton
            android:id="@+id/ibExpand"
            android:layout_width="@dimen/dimen_20dp"
            android:layout_height="@dimen/dimen_10dp"
            android:background="@android:color/transparent"
            android:layout_margin="@dimen/dimen_1dp"
            android:visibility="gone"
            android:layout_below="@+id/et_descr"
            android:src="@drawable/baseline_expand_more_black_18dp"/>



        <TextView
            android:id="@+id/et_descr"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:singleLine="false"
            android:gravity="left"
            android:paddingRight="6dp"
            android:textSize="10sp"
            android:hint=""
            android:enabled="false"

            android:textColor="#000000"
            android:layout_margin="1dp"
            android:layout_weight="3"
            android:background="@android:color/white"
            />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_weight="2"
            android:weightSum="2">

        <TextView
            android:id="@+id/et_tgt"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:gravity="center"
            android:paddingRight="8dp"
            android:textSize="10sp"
            android:visibility="visible"

            android:inputType="number"
            android:textColor="#000000"
            android:layout_margin="1dp"
            android:background="@android:color/white"
            android:layout_weight="1"/>
        <TextView
            android:id="@+id/et_tilldate"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:gravity="center"
            android:paddingRight="8dp"
            android:textSize="10sp"

            android:inputType="number"
            android:textColor="#000000"
            android:layout_margin="1dp"
            android:background="@android:color/white"
            android:layout_weight="1"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_weight="2"
            android:weightSum="2">

                <TextView
                    android:id="@+id/et_salestgt"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:gravity="center"
                    android:paddingRight="6dp"
                    android:textSize="12sp"
                    android:visibility="visible"

                    android:inputType="number"
                    android:textColor="#000000"
                    android:layout_margin="1dp"
                    android:background="@android:color/white"
                    android:layout_weight="1"/>
                <TextView
                    android:id="@+id/et_salestilldate"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:gravity="center"
                    android:paddingRight="6dp"
                    android:textSize="12sp"

                    android:inputType="number"
                    android:textColor="#000000"
                    android:layout_margin="1dp"
                    android:background="@android:color/white"
                    android:layout_weight="1"/>
        </LinearLayout>
        <TextView
            android:id="@+id/et_yesterday"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
           android:text="0"
            android:gravity="center"
            android:textSize="12sp"

            android:textColor="#000000"
            android:inputType="number"

            android:visibility="visible"
            android:layout_margin="1dp"
            android:background="@android:color/white"
            android:layout_weight="1"/>



</LinearLayout>
