<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:paddingLeft="4dp"
    android:paddingTop="4dp"
    android:paddingRight="4dp"
    android:weightSum="7">


        <ImageButton
            android:id="@+id/ibExpand"
            android:layout_width="@dimen/dimen_20dp"
            android:layout_height="@dimen/dimen_20dp"
            android:background="@android:color/transparent"
            android:layout_margin="@dimen/dimen_1dp"
            android:layout_below="@+id/et_descr"
            android:visibility="gone"
            android:src="@drawable/baseline_expand_more_black_18dp"/>
        <TextView
            android:id="@+id/et_descr"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:singleLine="false"
            android:gravity="left"
            android:paddingTop="1dp"
            android:paddingBottom="1dp"
            android:paddingLeft="1dp"
            
            android:textSize="10sp"
            android:hint=""

            
            android:textColor="#000000"
            android:layout_margin="1dp"
            android:layout_weight="2.3"
            android:background="@android:color/white"
            />


        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_weight="2.2"
            android:weightSum="2">

                <EditText
                    android:id="@+id/et_tgt"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:singleLine="true"
                   android:gravity="center"
                    
                    android:textSize="12sp"
                    android:visibility="visible"
                    android:enabled="false"
                    
                    android:textColor="#000000"
                    android:layout_margin="1dp"
                    android:background="#DDEBF7"
                    android:layout_weight="1"/>
                <EditText
                    android:id="@+id/et_tilldate"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:singleLine="true"
                   android:gravity="center"
                    
                    android:textSize="12sp"
                    android:enabled="false"
                    
                    android:textColor="#000000"
                    android:layout_margin="1dp"
                    android:background="#DDEBF7"
                    android:layout_weight="1"/>
        </LinearLayout>


        <EditText
            android:id="@+id/et_mtd"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:singleLine="true"
            android:textSize="12sp"
           android:gravity="center"
            
            android:textColor="#000000"
            
            android:enabled="false"
            android:visibility="visible"
            android:layout_margin="1dp"
            android:background="#DDEBF7"
            android:layout_weight="1.3"/>

        <EditText
            android:id="@+id/et_rr_rqd"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="1dp"
           android:gravity="center"
            
            android:singleLine="true"
            android:enabled="false"
            android:textSize="12sp"
            android:textColor="#000000"

            android:background="#DDEBF7"
            android:layout_weight="1.2"/>


</LinearLayout>
